{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://example.com/schemas/Thing.json",
    "title": "Thing",
    "description": "Base object for all things",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique identifier"
        },
        "name": {
            "type": "string",
            "description": "The name of the item."
        },
        "alternateName": {
            "type": "string",
            "description": "An alternate name for the item."
        },
        "description": {
            "type": "string",
            "description": "A description of the item."
        },
        "disambiguatingDescription": {
            "type": "string",
            "description": "A short description to disambiguate from other, similar items."
        },
        "identifier": {
            "description": "Identifier for the item (string, URI, or object).",
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "type": "string",
                    "format": "uri"
                },
                {
                    "type": "object",
                    "description": "Placeholder for PropertyValue"
                }
            ]
        },
        "image": {
            "description": "Image(s) of the item (URL or object).",
            "anyOf": [
                {
                    "type": "string",
                    "format": "uri",
                    "description": "Local path or URL"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "format": "uri"
                    }
                }
            ]
        },
        "potentialAction": {
            "type": "object",
            "description": "Indicates a potential Action."
        },
        "sameAs": {
            "description": "Reference URLs that unambiguously indicate the itemâ€™s identity.",
            "anyOf": [
                {
                    "type": "string",
                    "format": "uri"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "format": "uri"
                    }
                }
            ]
        },
        "url": {
            "type": "string",
            "format": "uri",
            "description": "URL of the item."
        },
        "additionalType": {
            "type": "string",
            "format": "uri",
            "description": "An additional type (URL) for the item."
        }
    }
}