{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://example.com/schemas/Thing.json",
    "title": "Thing",
    "description": "Base object for all things",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique identifier"
        },
        "name": {
            "type": "string",
            "description": "The name of the thing"
        },
        "alternateName": {
            "description": "An alternate name for the thing",
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "type": "array"
                }
            ]
        },
        "description": {
            "type": "string",
            "description": "A description of the thing"
        },
        "image": {
            "description": "Image(s) of the thing (URL or object).",
            "anyOf": [
                {
                    "type": "string",
                    "format": "uri",
                    "description": "Local path or URL"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "format": "uri"
                    }
                }
            ]
        },
        "sameAs": {
            "description": "References",
            "anyOf": [
                {
                    "$ref": "Thing.json"
                },
                {
                    "type": "array",
                    "items": {
                        "$ref": "Thing.json"
                    }
                }
            ]
        },
        "url": {
            "description": "Related URLs",
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "type": "array"
                }
            ]
        },
        "relationship": {
            "anyOf": [
                {
                    "type": "array",
                    "items": {
                        "$ref": "RelationshipType.json"
                    },
                    "minItems": 1
                },
                {
                    "$ref": "RelationshipType.json"
                }
            ]
        }
    },
    "required": [
        "id"
    ]
}