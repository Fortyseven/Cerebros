{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://example.com/schemas/RelationshipType.json",
    "title": "RelationshipType",
    "description": "Types of relationships between things",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "account of",
                "alias of",
                "associated with",
                "connected to",
                "contact of",
                "coworker",
                "employs",
                "employed by",
                "enemy of",
                "friend of",
                "has",
                "located at",
                "manages",
                "member of",
                "owns",
                "parent of",
                "registered to",
                "related to",
                "spouse of",
                "supervises",
                "suspect",
                "transacts with",
                "uses",
                "victim",
                "witnessed"
            ],
            "description": "Type of relationship"
        },
        "target": {
            "anyOf": [
                {
                    "type": "array",
                    "items": {
                        "$ref": "Thing.json"
                    },
                    "minItems": 1
                },
                {
                    "description": "The target of the relationship (any Thing type).",
                    "$ref": "Thing.json"
                },
                {
                    "type": "string",
                    "description": "Reference to a Thing object by path or URI."
                }
            ]
        }
    },
    "required": [
        "type",
        "target"
    ]
}