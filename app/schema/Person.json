{
    "$id": "https://example.com/schemas/Person.json",
    "$schema": "https://json-schema.org/draft-07/schema",
    "allOf": [
        {
            "$ref": "Thing.json"
        }
    ],
    "anyOf": [
        {
            "required": [
                "alias"
            ]
        },
        {
            "required": [
                "givenName",
                "familyName"
            ]
        }
    ],
    "description": "A person object",
    "properties": {
        "additionalName": {
            "description": "An additional name (e.g. middle name).",
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "type": "array"
                }
            ]
        },
        "affiliation": {
            "anyOf": [
                {
                    "$ref": "Organization.json"
                },
                {
                    "type": "string"
                },
                {
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "Organization.json"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    },
                    "minItems": 1,
                    "type": "array"
                }
            ],
            "description": "Organizations the person is affiliated with."
        },
        "alias": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "type": "array"
                }
            ]
        },
        "alumniOf": {
            "anyOf": [
                {
                    "$ref": "Organization.json"
                },
                {
                    "type": "string"
                },
                {
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "Organization.json"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    },
                    "minItems": 1,
                    "type": "array"
                }
            ],
            "description": "Organization(s) / educational institution(s) the person is an alumni of."
        },
        "birthDate": {
            "description": "Date of birth.",
            "format": "date",
            "type": "string"
        },
        "birthPlace": {
            "anyOf": [
                {
                    "$ref": "Place.json"
                },
                {
                    "format": "uri",
                    "type": "string"
                }
            ],
            "description": "Place of birth."
        },
        "children": {
            "anyOf": [
                {
                    "$ref": "Person.json"
                },
                {
                    "type": "string"
                },
                {
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "Person.json"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    },
                    "minItems": 1,
                    "type": "array"
                }
            ]
        },
        "deathDate": {
            "description": "Date of death.",
            "format": "date",
            "type": "string"
        },
        "deathPlace": {
            "anyOf": [
                {
                    "$ref": "Place.json"
                },
                {
                    "format": "uri",
                    "type": "string"
                }
            ],
            "description": "Place of death."
        },
        "email": {
            "description": "Known email addresses",
            "anyOf": [
                {
                    "format": "email",
                    "type": "string"
                },
                {
                    "items": {
                        "format": "email",
                        "type": "string"
                    },
                    "minItems": 1,
                    "type": "array"
                }
            ]
        },
        "familyName": {
            "description": "Family name (last name)",
            "examples": [
                "Dobbs",
                "Smith"
            ],
            "type": "string"
        },
        "faxNumber": {
            "description": "Fax number.",
            "type": "string"
        },
        "gender": {
            "description": "Gender of the person.",
            "examples": [
                "Male",
                "Female",
                "Non-binary"
            ],
            "type": "string"
        },
        "givenName": {
            "description": "Given name (first name)",
            "examples": [
                "J.R.",
                "John"
            ],
            "type": "string"
        },
        "height": {
            "type": "number",
            "description": "Person's height in meters"
        },
        "honorificPrefix": {
            "description": "Prefix (e.g. Dr., Mrs.).",
            "examples": [
                "Dr.",
                "Mrs."
            ],
            "type": "string"
        },
        "honorificSuffix": {
            "description": "Suffix (e.g. Jr., III).",
            "examples": [
                "Jr.",
                "III"
            ],
            "type": "string"
        },
        "jobTitle": {
            "description": "Job title.",
            "type": "string"
        },
        "knowsAbout": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "type": "array"
                }
            ],
            "description": "Subjects known about."
        },
        "knowsLanguage": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "type": "array"
                }
            ],
            "description": "Languages known."
        },
        "nationality": {
            "anyOf": [
                {
                    "$ref": "subtypes/Country.json"
                },
                {
                    "type": "string"
                }
            ],
            "description": "Nationality."
        },
        "occupation": {
            "anyOf": [
                {
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "type": "array"
                },
                {
                    "type": "string"
                }
            ],
            "description": "A description of the personâ€™s occupation."
        },
        "parent": {
            "anyOf": [
                {
                    "$ref": "Person.json"
                },
                {
                    "type": "string"
                },
                {
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "Person.json"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    },
                    "minItems": 1,
                    "type": "array"
                }
            ],
            "description": "A parent of this person."
        },
        "politicalAffiliation": {
            "examples": [
                "conservative",
                "liberal",
                "independent",
                "progressive",
                "centrist",
                "anarchist"
            ],
            "anyOf": [
                {
                    "description": "The political affiliation of this person.",
                    "type": "string"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            ]
        },
        "religiousAffiliation": {
            "description": "The religious affiliation of this person.",
            "anyOf": [
                {
                    "$ref": "Organization.json"
                },
                {
                    "type": "string"
                },
                {
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "Organization.json"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    },
                    "minItems": 1,
                    "type": "array"
                }
            ]
        },
        "spouse": {
            "anyOf": [
                {
                    "$ref": "Person.json"
                },
                {
                    "type": "string"
                },
                {
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "Person.json"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    },
                    "minItems": 1,
                    "type": "array"
                }
            ],
            "description": "The person's spouse."
        },
        "ssn": {
            "description": "Social Security Number",
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "type": "array"
                }
            ]
        },
        "phone": {
            "description": "Phone number",
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "type": "array"
                }
            ]
        },
        "weight": {
            "type": "number",
            "description": "Weight in kilograms."
        },
        "worksFor": {
            "anyOf": [
                {
                    "$ref": "Organization.json"
                },
                {
                    "type": "string"
                },
                {
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "Organization.json"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    },
                    "minItems": 1,
                    "type": "array"
                }
            ],
            "description": "Organizations the person works for."
        }
    },
    "title": "Person",
    "type": "object"
}